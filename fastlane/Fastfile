    gym(scheme: "SansFonts")
    deliver(force: true)
    pilot(changelog: "â€¢ Improve usability by excluding more icon fonts from being blocked.")
  end

  after_all do |lane|
    # ...
  end

  error do |lane, exception|
    # ...
  end
end

